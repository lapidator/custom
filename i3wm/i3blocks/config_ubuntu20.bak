# This configuration file uses a simplified INI file format.
#
# Properties not preceded by a section are considered global
# and merged into every section declarations.
#
# The only mandatory key of a block is `full_text`.

[simple]
full_text = This is a quite long white on red text.
short_text = Short white on red.
background = #FF0000
color = #FFFFFF

# Block with a fixed width
[aligned]
full_text=Here.
min_width=100
align=center
