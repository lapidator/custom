### PATH EXPORTS ###

# waterfox path # should now be included in /opt/bin via symlink
#export PATH="$PATH:/opt/waterfox"

# personal/opt bin path
export PATH="$PATH:/opt/bin"

# conda initialize was not automatically added to .zshrc, thus add it manually.
# However, as it did not work on the old machine AND I switched to zsh instead of bash,
# just add the path manually as before as well.
#
# >>> conda initialize >>>
# !! Contents within this block are managed by 'conda init' !!
__conda_setup="$('/home/localuser/anaconda3/bin/conda' 'shell.zsh' 'hook' 2> /dev/null)"
if [ $? -eq 0 ]; then
    eval "$__conda_setup"
else
    if [ -f "/home/localuser/anaconda3/etc/profile.d/conda.sh" ]; then
        . "/home/localuser/anaconda3/etc/profile.d/conda.sh"
    else
        export PATH="/home/localuser/anaconda3/bin:$PATH"
    fi
fi
unset __conda_setup
# <<< conda initialize <<<
#
# manually add the path
# (re-use exported path from sisko (Ubuntu 14) as conda initialize did not work there)
export PATH="$HOME/anaconda3/bin:$PATH"  # commented out by conda initialize

# IRAF path
export PATH="/iraf/iraf:$PATH"
export PATH="/iraf/iraf/bin:$PATH"

# gasgano & ESO SOFI pipeline (esorex) path
export PATH="$HOME/SOFI/pipelines/bin:$HOME/gasgano/bin:$PATH"

# fv (Fv: The Interactive FITS File Editor)
# does not work via a symlink in /opt/bin, as files from the fv dir are missing
export PATH="$PATH:/opt/fv5.5.2"

### PYTHON ###

# add personal module directory for Python
export PYTHONPATH="$PYTHONPATH:/home/localuser/git_code/PythonModules"


### MISC ###

# CPL (common pipeline library): for gasgano's access to recipes and Java stuff
export CPLDIR="$HOME/SOFI/pipelines"

# copy/paste script to remove duplicate PATH entries for bash
# (in the hope that it works in zsh as well)
if [ -n "$PATH" ]; then
  old_PATH=$PATH:; PATH=
  while [ -n "$old_PATH" ]; do
    x=${old_PATH%%:*}       # the first remaining entry
    case $PATH: in
      *:"$x":*) ;;          # already there
      *) PATH=$PATH:$x;;    # not there yet
    esac
    old_PATH=${old_PATH#*:}
  done
  PATH=${PATH#:}
  unset old_PATH x
fi
